<%- include('./include/header.ejs')%>
<div class="row">
  <div class="col-sm-6">
    <form class="form-group" action="/login" method="POST">
      <label for="username">Username : </label>
      <input
        required
        class="form-control"
        type="text"
        name="username"
        id="username"
      />
      <label for="username">Password : </label>
      <input
        required
        class="form-control"
        type="password"
        name="password"
        id="password"
      />
      <br />
      <button class="form-control btn btn-success" type="submit">Login</button>
      <% if(typeof errorMessage != 'undefined'){%>
        <span><p style="color: red;"><%=errorMessage%></p></span>
      <%}%>
      <% if(typeof userInfoMessage != 'undefined'){%>
        <span><p style="background-color:green; color: white;"><%=userInfoMessage%></p></span>
      <%}%>
    </form>
    <br />
    <a href="/signup"
      ><button type="button" class="btn btn-info">Register</button></a
    >
  </div>
</div>

<%- include('./include/footer.ejs')%>
